{
  "compilerOptions": {
    // "target": "es5",
    // "module": "commonjs",

    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "dist/js",
    "strict": true,
    "sourceMap": true,
    "jsx": "react-jsxdev",
    "esModuleInterop": true,
    // "lib": ["es2015", "dom"],
    "lib": ["ESNext", "DOM"],
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    }
  }
}
